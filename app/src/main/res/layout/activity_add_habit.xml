<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить новую привычку"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Поле ввода названия привычки -->
    <EditText
        android:id="@+id/etHabitName"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginBottom="12dp"
        android:hint="Введите название привычки"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Кнопка для выбора даты -->
    <Button
        android:id="@+id/btnPickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать дату"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Текст для отображения выбранной даты -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата не выбрана"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Кнопка сохранения привычки -->
    <Button
        android:id="@+id/btnSaveHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить привычку"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:elevation="5dp"
        android:textSize="20dp"
        android:background="@drawable/back"
        android:contentDescription="Forgot Password button, click to reset your password"/>

</LinearLayout>